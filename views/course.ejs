<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/essentialsHead.ejs')%>
    <%-include('./partials/MDB-GoogleFonts.ejs')%>
    <style>
        .options{
            background-color: #2674f2;
        }
        hr{
            border-top: 3px solid;
            width: 10%;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>
<body class="bg-light">
    <%-include('./partials/navbar.ejs')%>

    <section style="min-height: 100vh; margin-bottom: 15vh;">
        <div class="container-fluid p-5">
            <div class="row">
                <div class="col-md">
                    <h1 class="text-center"><%= id %></h1>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col">
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-lg options text-light mx-4" data-mdb-toggle="modal" data-mdb-target="#recordAttModal">Record Attendance</button>                    
                        <button class="btn btn-lg options text-light mx-4" data-mdb-toggle="modal" data-mdb-target="#studentAbsModal">Student Absence</button>                    
                        <button class="btn btn-lg options text-light mx-4" data-mdb-toggle="modal" data-mdb-target="#averageAttModal">Average Attendance</button>                    
                        <button class="btn btn-lg options text-light mx-4" data-mdb-toggle="modal" data-mdb-target="#exportAttModal">Export Attendance</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="container" style="margin-top: 8vh;">
            <div class="row">
                <div class="col">
                    <h3 class="text-center">Flagged Dates</h3>    
                </div>
            </div>
            
            <hr>

            <div class="row row-cols-3 mt-4">
                <div class="col my-3"><button class="btn btn-lg d-block mx-auto">Hii</button></div>
                <div class="col my-3"><button class="btn btn-lg d-block mx-auto">Hii</button></div>
                <div class="col my-3"><button class="btn btn-lg d-block mx-auto">Hii</button></div>
                <div class="col my-3"><button class="btn btn-lg d-block mx-auto">Hii</button></div>
                <div class="col my-3"><button class="btn btn-lg d-block mx-auto">Hii</button></div>
                <div class="col my-3"><button class="btn btn-lg d-block mx-auto">Hii</button></div>
            </div>
        </div>
    </section>

    <div class="modal fade" id="recordAttModal" tabindex="-1" aria-labelledby="recordAttModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content px-5 pb-3">
                <div class="modal-header d-flex justify-content-center">
                    <h5 class="modal-title">Record Attendance</h5>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div>
                            <label class="form-label" for="stuList">ID's List: </label>
                            <textarea class="form-control" id="stuList" name="stuList" rows="5" placeholder='Ex: 20186030 20185068 ... write "All" to select all'></textarea>
                          </div>
                        <div class="d-flex justify-content-center mt-3">
                            <input type="date" id="date" name="date" required>
                        </div>
                        <div class="d-flex justify-content-center mt-5">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="quickRadio" id="Attendant" value="Attendant" checked/>
                                <label class="form-check-label" for="Attendant">Attendant</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="quickRadio" id="Absent" value="Absent" />
                                <label class="form-check-label" for="Absent">Absent</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center" style="margin-top: 8vh;">
                            <button type="submit" class="btn btn-lg btn-primary">Record</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="studentAbsModal" tabindex="-1" aria-labelledby="studentAbsModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content px-5 pb-3">
                <div class="modal-header d-flex justify-content-center">
                    <h5 class="modal-title">Student absence</h5>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div class="mb-2 fw-bold text-muted">
                            <label class="form-label" for="stID">Student ID:</label>
                            <input class="form-control" type="number" id="stID" name="stID" placeholder="Ex: 20186030"  />
                        </div>
                        <div class="d-flex justify-content-center mt-5">
                            <button type="submit" class="btn btn-lg btn-primary">get absence</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="averageAttModal" tabindex="-1" aria-labelledby="averageAttModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content px-5 pb-3">
                <div class="modal-header d-flex justify-content-center">
                    <h5 class="modal-title">Average Attendance</h5>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div class="my-4 fw-bold text-muted">
                            <label class="me-2" for="fromDate">From: </label>
                            <input type="date" id="fromDate" name="fromDate" required>
                        </div>
                        <div class="my-4 fw-bold text-muted">
                            <label class="me-2" for="toDate">To: </label>
                            <input type="date" id="toDate" name="toDate" required>
                        </div>
                        <div class="d-flex justify-content-center" style="margin-top: 8vh;">
                            <button type="submit" class="btn btn-lg btn-primary">get average</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exportAttModal" tabindex="-1" aria-labelledby="exportAttModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content px-5 pb-4">
                <div class="modal-header d-flex justify-content-center">
                    <h5 class="modal-title">Export Attendance</h5>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div class="my-4 fw-bold text-muted">
                            <label class="me-2" for="fromDate">From: </label>
                            <input type="date" id="fromDate" name="fromDate" required>
                        </div>
                        <div class="my-4 fw-bold text-muted">
                            <label class="me-2" for="toDate">To: </label>
                            <input type="date" id="toDate" name="toDate" required>
                        </div>
                        <div class="fw-bold text-muted my-4">
                            <label class="me-2" for="format">Format: </label>
                            <div class="btn-group" id="format">
                                <input type="radio" class="btn-check" name="options" id="JSON" autocomplete="off" checked />
                                <label class="btn btn-light" for="JSON">JSON</label>
                              
                                <input type="radio" class="btn-check" name="options" id="EXCEL" autocomplete="off" />
                                <label class="btn btn-light" for="EXCEL">EXCEL</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center" style="margin-top: 8vh;">
                            <button type="submit" class="btn btn-lg btn-primary">Export</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer & MDB CDN -->
    <%-include('./partials/footer&MDB.ejs')%>
</body>
</html>