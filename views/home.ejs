    <div class="modal fade" id="quickRecordModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content px-5 pb-3">
                <div class="modal-header d-flex justify-content-center">
                    <h5 class="modal-title">Quick Record</h5>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div class="form-outline mb-2">
                            <input type="text" id="courseID" class="form-control" placeholder='Ex: ITCE101/1' required/>
                            <label class="form-label" for="courseID">CourseID/Section</label>
                        </div>
                        <div class="form-outline mb-2">
                            <input type="text" id="stID" class="form-control" placeholder='Ex: 20186030' required/>
                            <label class="form-label" for="stID">Student ID</label>
                        </div>
                        <div class="mt-2 mb-2">
                            <input type="date" id="date" name="date" required>
                        </div>
                        <div class="d-flex justify-content-center" style="margin-top: 8vh;">
                            <button type="submit" class="btn btn-lg btn-primary">Record</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exportAllModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content px-5 pb-3">
                <div class="modal-header d-flex justify-content-center">
                    <h5 class="modal-title">Export All Attendance</h5>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div class="my-2 fw-bold text-muted">
                            <label class="me-2" for="fromDate">From: </label>
                            <input type="date" id="fromDate" name="fromDate" required>
                        </div>
                        <div class="my-2 fw-bold text-muted">
                            <label class="me-2" for="toDate">To: </label>
                            <input type="date" id="toDate" name="toDate" required>
                        </div>
                        <div class="fw-bold text-muted my-2">
                            <label class="me-2" for="format">Format: </label>
                            <div class="btn-group" id="format">
                                <input type="radio" class="btn-check" name="options" id="JSON" autocomplete="off" checked />
                                <label class="btn btn-light" for="JSON">JSON</label>
                              
                                <input type="radio" class="btn-check" name="options" id="EXCEL" autocomplete="off" />
                                <label class="btn btn-light" for="EXCEL">EXCEL</label>
    
                            </div>
                        </div>
                        <div class="d-flex justify-content-center" style="margin-top: 8vh;">
                            <button type="submit" class="btn btn-lg btn-primary">Export</button>
                        </div>
                    </form>
