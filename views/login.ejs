<!DOCTYPE html>
<html lang="en">
<head>
  <%-include('./partials/essentialsHead.ejs')%>
  <%-include('./partials/MDB-GoogleFonts.ejs')%>
</head>

  <body>
    <section style="min-height: 92vh; background-color: #FAFAFA;">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card text-body bg-light" style="border-radius: 1rem;">
              <div class="card-body text-center p-5 pb-0">
                <div class="mb-md-5 mt-md-4 pb-1">
                  <h2 class="fw-bold mb-2 text-primary text-opacity-80">UOB-attSys</h2>
                  <p class="text-body-50 mt-4 mb-5">
                    Please enter your email and password!
                  </p>
                  <form class="form-body" method="POST" action="/login" >
                      <% if(messages.error){ %> 
                        <p class="text-body-50 fw-bold"><%= messages.error %> </p> 
                      <% } %> 
                    <div class="form-outline mb-4">
                      <input type="email" id="email" name="email" class="form-control form-control-lg" required />
                      <label class="form-label" for="email">Email</label>
                    </div>
                    <div class="form-outline mb-4">
                      <input type="password" id="password" name="password" class="form-control form-control-lg" required />
                      <label class="form-label" for="password">Password</label>
                    </div>
                    <button class="btn btn-primary btn-lg px-5 mt-5 mb-4" type="submit">
                      Login
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="forgotPssModal" tabindex="-1" aria-labelledby="forgotPssModalLabel"
                      aria-hidden="true">
                      <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                          <div class="modal-header d-flex">
                            <h5 class="modal-title flex-grow-1 text-body" id="forgotPssModalLabel">Contact Zain Center
                            </h5>
                            <button type="button" class="btn-close" data-mdb-dismiss="modal"
                              aria-label="Close"></button>
                          </div>
                          <div class="modal-body pt-5 pb-5">
                            <a href="#" id="person1" class="d-inline-block mb-4" data-mdb-toggle="tooltip"
                              data-mdb-placement="bottom" title="copy" onclick="copy(this.id)"
                              style="color:#757575">person1@uob.edu.bh</a>
                            <br>
                            <a href="#" id="person2" class="d-inline-block" data-mdb-toggle="tooltip"
                              data-mdb-placement="bottom" title="copy" onclick="copy(this.id)"
                              style="color:#757575">person2@uob.edu.bh</a>
                          </div>
                        </div>
                      </div>
                    </div>
                    <p class="small fw-bold pb-lg-2 mt-5" data-mdb-toggle="modal" data-mdb-target="#forgotPssModal">
                      <a href="#" style="color:#757575">Forgot password?</a>
                    </p>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer & MDB CDN -->
    <%-include('./partials/footer&MDB.ejs')%>
  </body>

</html>